{
  "name": "copaco-quotes-service",
  "version": "1.0.0",
  "description": "A modern web service for random quotes with liking and recommendation features",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "docker:build": "docker build -t copaco-quotes .",
    "docker:run": "docker run -p 3000:3000 copaco-quotes"
  },
  "dependencies": {
    "fastify": "^4.24.3",
    "@fastify/cors": "^8.4.0",
    "zod": "^3.22.4",
    "axios": "^1.6.0",
    "sqlite3": "^5.1.6",
    "graphql": "^16.8.1",
    "mercurius": "^13.3.3",
    "natural": "^6.10.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.9",
    "@types/jest": "^29.5.7",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.53.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.1.4",
    "typescript": "^5.2.2"
  }
}